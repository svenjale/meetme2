<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.meetme.HelloActivity" >
    <!-->android:background=""<-->

    <LinearLayout

        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp"
        android:id="@+id/linearLayout2">

        </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@drawable/schlossklien"
        >
    </LinearLayout>


    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="230dp"
            app:srcCompat="@drawable/ic_smap_logo"
            android:layout_above="@+id/editTextEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />


    <EditText

        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_height="wrap_content"
        android:hint="Email eingeben"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteY="295dp"
        tools:layout_editor_absoluteX="44dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword" />

    <EditText
        android:id="@+id/editTextPassword"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Passwort eingeben"
        android:inputType="textPassword"
        tools:layout_editor_absoluteY="232dp"
        tools:layout_editor_absoluteX="44dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />



        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            android:text="Benutzer registrieren"
            android:layout_marginTop="83dp"
            android:layout_below="@+id/editTextEmail"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/textViewSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Schon registriert? Hier einloggen"
            android:textAlignment="center"
            android:layout_below="@+id/buttonRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />


    <ImageButton
        android:id="@+id/button14"
        android:layout_width="40dp"
        android:src="@drawable/helpicon"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/mybutton"
        />




</android.widget.RelativeLayout>